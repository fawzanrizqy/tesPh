<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
</head>
<body>
    <h2>User List</h2>
    <table border="1">
        <thead>
            <tr>
                <th>Username</th>
                <th>Password</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                  <td><%= user.username %></td>
                  <td><%= user.password %></td>
                  <td><%= user.createdAt.toDateString() %></td>
                  <td>
                   <button> <a href="/users-edit/<%= user.id %>">Edit</a></button> <br> <br><form action="/users/<%= user.id %>" method="post"><button type="submit">Delete</button> </form>
                 
                  </td>
                </tr>
              <% }); %>
        </tbody>
    </table>
</body>
</html>